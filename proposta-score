    }
    .estrelas-container {
      margin-top: 2rem;
    }
    .estrela {
      width: 70px;
      margin: 10px;
      opacity: 0;
      transform: scale(0);
      display: inline-block;
      filter: drop-shadow(0 0 6px rgba(0,0,0,0.2));
    }
    #pontos {
      font-size: 2.625rem; /* 42px */
      margin: 2.5rem 0 1.875rem;
